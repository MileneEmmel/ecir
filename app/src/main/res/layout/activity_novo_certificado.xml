<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#C9FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da Tela -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Certificado"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#0B274E"
            android:paddingBottom="16dp" />

        <!-- Campo de Nome do Certificado -->
        <EditText
            android:id="@+id/editCertificadoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Certificado"
            android:inputType="text"
            android:background="@drawable/rounded_corners"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Campo de Data de Emissão -->
        <EditText
            android:id="@+id/editCertificadoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Emissão"
            android:inputType="date"
            android:background="@drawable/rounded_corners"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Campo de Organização Emitente -->
        <EditText
            android:id="@+id/editCertificadoOrganizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organização Emitente"
            android:inputType="text"
            android:background="@drawable/rounded_corners"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Botão para selecionar o PDF -->
        <Button
            android:id="@+id/btnSelecionarPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0B274E"
            android:text="Selecionar PDF"
            android:layout_marginTop="12dp"
            android:padding="12dp"/>

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarCertificado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Certificado"
            android:backgroundTint="#0B274E"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
