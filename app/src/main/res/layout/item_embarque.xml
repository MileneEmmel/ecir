<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:gravity="center_vertical"
    android:layout_marginVertical="6dp"
    android:elevation="4dp">

    <!-- Nome do Embarque -->
    <TextView
        android:id="@+id/nomeEmbarqueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nome do Embarque"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000" />

    <!-- Botão para Ver detalhes do Embarque -->
    <Button
        android:id="@+id/verEmbarqueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"
        android:backgroundTint="#0B274E"
        android:textColor="#FFFFFF" />

    <!-- Botão para Editar Embarque -->
    <ImageButton
        android:id="@+id/editEmbarqueButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="editar_embarque"
        android:src="@drawable/edit"
        android:scaleType="centerInside"
        android:padding="8dp"
        />

    <!-- Botão para Deletar Embarque -->
    <ImageButton
        android:id="@+id/deleteEmbarqueButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="deletar_embarque"
        android:src="@drawable/delete"
        android:scaleType="centerInside"
        android:padding="4dp"
        />
</LinearLayout>