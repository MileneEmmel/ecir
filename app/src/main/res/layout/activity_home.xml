<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul">

    <!-- Top Menu -->

    <!-- Logo -->
    <ImageButton
        android:id="@+id/topMenuButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menu"
        android:src="@drawable/opcoes" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logoecir" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logoImage"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- First Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Button 1 -->
            <Button
                android:id="@+id/personalDataButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/dados_pessoais"
                android:backgroundTint="#1A2A4E"
                android:drawableLeft="@drawable/icons8_identidade_50__1_" /> <!-- Fundo azul sem bordas -->

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dourado" />

            <!-- Button 2 -->
            <Button
                android:id="@+id/documentsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/certificados_e_documentos"
                android:drawableLeft="@drawable/icons8_documentos_48"
                android:backgroundTint="#1A2A4E" /> <!-- Fundo azul sem bordas -->
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dourado" />

        <!-- Second Row of Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Button 3 -->
            <Button
                android:id="@+id/boardingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Registro Embarques"
                android:drawableLeft="@drawable/icons8_passaporte_50"
                android:backgroundTint="#1A2A4E" /> <!-- Fundo azul sem bordas -->

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dourado" />

            <!-- Button 4 -->
            <Button
                android:id="@+id/calendarButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CalendÃ¡rio Embarques"
                android:drawableLeft="@drawable/icons8_calend_rio_32"
                android:backgroundTint="#1A2A4E" /> <!-- Fundo azul sem bordas -->
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
